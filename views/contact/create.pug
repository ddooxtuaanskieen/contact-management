extends ../layout/general
block Content
    link(rel="stylesheet", href="/css/contact/create.css")
    .container.content
        form(action="", method="post", enctype="multipart/form-data")
            .row
                .col.left-side
                    label(for="") Name
                    input(type="text", name="name")
                    br
                    label(for="") Phone
                    input(type="number", name="phone")
                .col.right-side
                    label(for="") Avatar
                    input(type="file", name="avatar")
            .center
                input(type="submit", value="Create")
                a.badge.badge-secondary(href="/contacts") Cancel