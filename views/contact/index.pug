extends ../layout/general
block Content
    link(rel="stylesheet", href="css/contact/index.css")
    .row.nav-bar
        .col.left-side
            a(href="/contacts/create")
                <i class="fas fa-user-plus fa-2x"></i>
        .col.right-side
            .user
                img(src="https://picsum.photos/50/50", alt="avatar")
                ul
                    li
                        a(href="#") #{username}
                    li
                        a(href="/logout") Logout
    .container.contacts
        if !contacts
            p
                |No contact here.
                a(href="/contacts/create") Create one
        else
            form(action="", method="get")
                input(type="text", name="keyword", placeholder="Type here...")
                button(type="submit", class="btn btn-success")
                    <i class="fas fa-search"></i>
            table.table.table-hover
                tr
                    th Avatar
                    th Name
                    th Phone
                    th Action
                    
                each val in contacts
                    tr
                        td
                            img(src="" + val.avatar, alt="")
                        td=val.name
                        td=val.phone
                        td
                            a(href="/contacts/detail/" + val._id, class="badge badge-primary") Detail
                            a(href="/contacts/update/" + val._id, class="badge badge-warning") Update
                            a(href="/contacts/delete/" + val._id, class="badge badge-danger") Delete



